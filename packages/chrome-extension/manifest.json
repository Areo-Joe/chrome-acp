{
  "name": "Chrome ACP",
  "description": "Chat interface for Agent Client Protocol (ACP) agents. Connect to any ACP-compatible AI agent through a proxy server.",
  "version": "1.0.10",
  "manifest_version": 3,
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "tabs",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "strip_csp",
        "enabled": true,
        "path": "rules/strip_csp.json"
      }
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:*; object-src 'self'; connect-src 'self' http://localhost:* ws://localhost:* wss://localhost:* https://* wss://*;"
  },
  "action": {
    "default_title": "Open ACP Chat",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "dist/sidepanel.html"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  }
}
